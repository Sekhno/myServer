html
    head
        meta(charset='UTF-8')
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title=title
        link(rel='icon', type='image/png', href='/images/favicon.png')
        link(rel='stylesheet', href='/stylesheets/normalize.css')
        link(rel='stylesheet', href='/stylesheets/pages/auth/styles.css')
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH", crossorigin="anonymous")

    body
        div(class='formWrapper')
            form(class="m-3", action="/auth/api/register" method="post", id="myForm")
                div(class="row")
                    div(class="col")
                        label(for="firstName", class="form-label")='First Name'
                            input(type="text", aria-label="First name", class="form-control", id="firstName")
                    div(class="col")
                        label(for="lastName", class="form-label")='Last Name'
                            input(type="text", aria-label="Last name", class="form-control", id="lastName")

                div(class="mb-3")
                    label(for="email", class="form-label w-100")='Email'
                        input(type="email", class="form-control", id="email" required)

                div(class="mb-3")
                    label(for="password", class="form-label w-100")='Password'
                        input(type="password", class="form-control", id="password", required)

                button(type="submit" class="btn btn-primary w-100 mb-3")='Register'

                a(class="icon-link", href="/auth")='Or Login'

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz", crossorigin="anonymous")
    script(src="../javascripts/auth/register.js")
